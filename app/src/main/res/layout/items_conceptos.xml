<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="?android:attr/listSeparatorTextViewStyle"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtItemCotizacionConcepto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="Desarrollo de aplicacioﾌ］ web: Seguimiento de egresados, portal web con encuesta en liﾌ］ea y aplicacioﾌ］ de escritorio para la generacioﾌ］ de reportes"/>

        <TextView
            android:id="@+id/txtItemCotizacionCantidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="12sp"
            tools:text="1"/>

        <TextView
            android:id="@+id/txtItemCotizacionPrecio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_gravity="center"
            tools:text="$500"/>

        <TextView
            android:id="@+id/txtItemCotizacionImpuesto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="12sp"
            tools:text="IVA: 16%"/>

        <TextView
            android:id="@+id/txtItemCotizacionDescuento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="12sp"
            tools:text="50%"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnItemsEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15sp"
            android:textSize="12sp"
            android:text="Editar"/>

        <Button
            android:id="@+id/btnItemsEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:textSize="12sp"
            android:text="Eliminar"/>

    </LinearLayout>


</LinearLayout>