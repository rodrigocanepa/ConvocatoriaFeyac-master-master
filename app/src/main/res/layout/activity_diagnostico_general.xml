<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6sp"
    tools:context=".DiagnosticoGeneralActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Datos del representante legal"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtDiagGeneralNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textCapSentences"
                    android:imeOptions="actionNext"
                    android:hint="Nombre completo" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtDiagGeneralEdad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:hint="Edad" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtDiagGeneralTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textCapSentences"
                    android:imeOptions="actionNext"
                    android:hint="Teléfono" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtDiagGeneralCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionDone"
                    android:hint="Correo" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtDiagGeneralIntegrantesHombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number|textCapSentences"
                    android:imeOptions="actionNext"
                    android:hint="# De integrantes del proyecto hombres" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtDiagGeneralIntegrantesMujeres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number|textCapSentences"
                    android:imeOptions="actionNext"
                    android:hint="# De integrantes del proyecto mujeres" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtDiagGeneralIntegrantesHombresIMSS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number|textCapSentences"
                    android:imeOptions="actionNext"
                    android:hint="# De integrantes del proyecto registrados en el IMSS hombres" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtDiagGeneralIntegrantesMujeresIMSS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number|textCapSentences"
                    android:imeOptions="actionNext"
                    android:hint="# De integrantes del proyecto registrados en el IMSS mujeres" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtDiagGeneralIntegrantesHombresDiscapacidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number|textCapSentences"
                    android:imeOptions="actionNext"
                    android:hint="# De integrantes del proyecto con alguna discapacidad hombres" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtDiagGeneralIntegrantesMujeresDiscapacidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number|textCapSentences"
                    android:imeOptions="actionDone"
                    android:hint="# De integrantes del proyecto con alguna discapacidad mujeres" />

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Cuál es su grado de estudio?"
                android:layout_margin="6sp"/>

            <Spinner
                android:id="@+id/spinnerGradoEstudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"></Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione su género"
                android:layout_margin="6sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnDiagGeneralMasc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    android:text="Masculino"/>

                <Button
                    android:id="@+id/btnDiagGeneralFem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    android:text="Femenino"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleccione su ocupación"
                android:layout_margin="6sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnDiagGeneralEmpresario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    android:text="Empresario"/>

                <Button
                    android:id="@+id/btnDiagGeneralEmpleado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    android:text="Empleado"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnDiagGeneralDesempleado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    android:text="Desempleado"/>

                <Button
                    android:id="@+id/btnDiagGeneralEstudiante"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    android:text="Estudiante"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnDiagGeneralOtro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="5sp"
                    android:text="Otro"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Selecciona de mayor a menor la preocupación de tu negocio? (puede seleccionar hasta 3, siendo el 1 el mayor en grado de preocupación)"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp">

                <RelativeLayout
                    android:id="@+id/relDiagGeneralAdmon"
                    android:layout_width="0dp"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:background="@drawable/borde_no_redondeado_gray">

                    <TextView
                        android:id="@+id/txtDiagGeneralAdmon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1"
                        android:textStyle="bold"
                        android:layout_margin="6sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="Administración"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relDiagGeneralFinanzas"
                    android:layout_width="0dp"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:background="@drawable/borde_no_redondeado_gray">

                    <TextView
                        android:id="@+id/txtDiagGeneralFinanzas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1"
                        android:textStyle="bold"
                        android:layout_margin="6sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="Finanzas"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relDiagGeneralMkt"
                    android:layout_width="0dp"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:background="@drawable/borde_no_redondeado_gray">

                    <TextView
                        android:id="@+id/txtDiagGeneralMkt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1"
                        android:textStyle="bold"
                        android:layout_margin="6sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="Mercadotecnia y ventas"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relDiagGeneralProcesos"
                    android:layout_width="0dp"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:background="@drawable/borde_no_redondeado_gray">

                    <TextView
                        android:id="@+id/txtDiagGeneralProcesos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1"
                        android:textStyle="bold"
                        android:layout_margin="6sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="Procesos"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relDiagGeneralRH"
                    android:layout_width="0dp"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:background="@drawable/borde_no_redondeado_gray">

                    <TextView
                        android:id="@+id/txtDiagGeneralRH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1"
                        android:textStyle="bold"
                        android:layout_margin="6sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="Recursos humanos"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relDiagGeneralFinanciamiento"
                    android:layout_width="0dp"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:background="@drawable/borde_no_redondeado_gray">

                    <TextView
                        android:id="@+id/txtDiagGeneralFinanciamiento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1"
                        android:textStyle="bold"
                        android:layout_margin="6sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="Financiamiento"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relDiagGeneralUsoTech"
                    android:layout_width="0dp"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:background="@drawable/borde_no_redondeado_gray">

                    <TextView
                        android:id="@+id/txtDiagGeneralUsoTech"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1"
                        android:textStyle="bold"
                        android:layout_margin="6sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="Uso de las tecnologías"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relDiagGeneralAcomContable"
                    android:layout_width="0dp"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:background="@drawable/borde_no_redondeado_gray">

                    <TextView
                        android:id="@+id/txtDiagGeneralAcomContable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1"
                        android:textStyle="bold"
                        android:layout_margin="6sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="Acompañamiento contable"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relDiagGeneralAcomLegal"
                    android:layout_width="0dp"
                    android:layout_height="80sp"
                    android:layout_weight="1"
                    android:background="@drawable/borde_no_redondeado_gray">

                    <TextView
                        android:id="@+id/txtDiagGeneralAcomLegal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1"
                        android:textStyle="bold"
                        android:layout_margin="6sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="Acompañamiento legal"/>

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnDiagGeneralReiniciar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:text="Reiniciar selección"/>

            <Button
                android:id="@+id/btnDiagGeneralContinuar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continuar"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>