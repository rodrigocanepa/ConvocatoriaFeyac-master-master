<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RealizarDiagnosticoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDatosEmpresaActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="ÁREA EN TURNO"
            android:gravity="center"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="8sp"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12sp"
            android:background="@drawable/borde_redondeado_blur_sin_fondo">

            <TextView
                android:id="@+id/txtDatosEmpresaPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18sp"
                android:textColor="@android:color/black"
                tools:text="1. Esta es una prueba de la primera pregunta que estaré colocando en los textos."/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearDatosEmpresaTres"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4sp"
        android:layout_marginRight="4sp"
        android:gravity="center">

        <Button
            android:id="@+id/btnEstatusActualTresSi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="2sp"
            android:background="@android:color/white"
            android:text="Si"/>

        <Button
            android:id="@+id/btnEstatusActualTresNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="2sp"
            android:background="@android:color/white"
            android:layout_marginRight="2sp"
            android:text="No"/>

        <Button
            android:id="@+id/btnEstatusActualTresNoSe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="2sp"
            android:background="@android:color/white"
            android:text="No sé"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearDatosEmpresaDos"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:paddingTop="20sp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="6sp">

            <Button
                android:id="@+id/btnEstatusActualDos1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="Si"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="6sp">

            <Button
                android:id="@+id/btnEstatusActualDos2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:text="No"/>


        </LinearLayout>




    </LinearLayout>

    <Button
        android:id="@+id/btnDatosEmpresaSigPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10sp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/holo_blue_dark"
        android:text="Siguiente"/>



</RelativeLayout>
