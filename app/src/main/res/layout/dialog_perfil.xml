<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8sp">


    <ImageView
        android:id="@+id/imgDialogLogotipo"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_insert_photo_black_24dp"/>

    <TextView
        android:id="@+id/txtDialogLogotipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:text="Selecciona el logotipo de tu empresa"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtDialogPerfilNombreEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|textCapSentences"
            android:imeOptions="actionNext"
            android:hint="Nombre de la empresa/negocio" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtDialogPerfilNombreAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|textCapSentences"
            android:imeOptions="actionNext"
            android:hint="Nombre administrador" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtDialogPerfilCargoAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text|textCapSentences"
            android:imeOptions="actionNext"
            android:hint="Cargo del administrador" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtDialogPerfilNumeroAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:hint="TelÃ©fono del administrador" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>