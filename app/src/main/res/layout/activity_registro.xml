<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12sp"
    tools:context=".RegistroActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10sp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:src="@drawable/pyme_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:textSize="14sp"
            android:paddingStart="12sp"
            android:paddingEnd="12sp"
            android:layout_marginTop="12sp"
            android:hint="Escribe tu email"
            android:layout_marginLeft="6sp"
            android:layout_marginRight="6sp"
            android:drawableStart="@drawable/ic_mail_white_24dp"
            android:drawablePadding="15sp"
            android:inputType="textEmailAddress"
            android:background="@drawable/borde_redondeado_blur"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:id="@+id/editEmailRegistro"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18sp"
            app:hintEnabled="false"
            app:hintAnimationEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@android:color/white">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:textSize="14sp"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:layout_marginLeft="6sp"
                android:layout_marginRight="6sp"
                android:inputType="textPassword"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="15sp"
                android:background="@drawable/borde_redondeado_blur"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint="Escribe tu contraseña"
                android:id="@+id/editPasswordRegistro"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18sp"
            app:hintEnabled="false"
            app:hintAnimationEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@android:color/white">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:textSize="14sp"
                android:paddingStart="12sp"
                android:paddingEnd="12sp"
                android:layout_marginLeft="6sp"
                android:layout_marginRight="6sp"
                android:inputType="textPassword"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="15sp"
                android:background="@drawable/borde_redondeado_blur"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint="Confirma tu contraseña"
                android:id="@+id/editPasswordRegistroConfirmar"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="160sp"
            android:layout_height="35sp"
            android:textSize="14sp"
            android:text="Login"
            android:textStyle="bold"
            android:layout_marginTop="24sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:background="@drawable/borde_redondeado_boton_face"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/txtSignTermsConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:text="@string/messageWithLinkSigh"/>

    </RelativeLayout>

</LinearLayout>